<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{%block title%}Smarter Bookmarks{%endblock%}:: MentalNote</title>

        <meta charset="utf-8">
        <meta name="description" content="">
        <meta name="author" content="">

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <script type="text/javascript">
            var mentalNote = {
                route: {
                    url_metainfo: '{{ path('url_metainfo') }}',
                    tag_search: '{{ path('tag_search') }}'
                }
            }
        </script>

        <!-- Le styles -->
        {% stylesheets filter="cssrewrite"
        'bundles/olrymentalnote/components/bootstrap3/css/bootstrap.min.css'
        'bundles/olrymentalnote/components/select2/select2.css'
        'bundles/olrymentalnote/components/font-awesome/css/font-awesome.min.css'
        'bundles/olrymentalnote/css/*css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}


        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->

    </head>

    <body>

        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}"> <i class="icon-bookmark"></i> MentalNote</a>
                </div>

                <div class="collapse navbar-collapse">

                    <ul class="nav navbar-nav">
                        <li{{ active_menu|default('') == 'entries' ?  ' class="active"' : '' }}>
                        <a href="{{ path('homepage') }}">Entries</a>
                        </li>
                        <li{{ active_menu|default('') == 'visit_regularly' ?  ' class="active"' : '' }}>
                        <a href="{{ path('visit_regularly') }}">Visit regularly</a>
                        </li>
                    </ul>

                    <div class="nav navbar-right">

                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="javascript://" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i> profile <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('user_change_password') }}"><i class="icon-key"></i> change password</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="{{ path('logout') }}" title="logout"><i class="icon-off "></i> logout</a>
                            </li>
                        </ul>

                        <form class="navbar-form navbar-right" role="form" action="{{ path('homepage') }}">
                            <div class="form-group">
                                <input type="text" class="form-control" name="filter[query]" placeholder="Search" focus="focus" />
                                <input type="hidden" name="filter[pendingOnly]" value="0" />
                            </div>
                        </form>
                    </div>

                </div><!--/.nav-collapse -->
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    {% block breadcrumb %}{% endblock %}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 hidden-xs">
                    {% block sidebar %}{% endblock %}
                </div>

                <div class="col-sm-9 col-xs-12">
                    {% block content %}{% endblock %}
                </div>
            </div>

        </div>

        {% include 'OlryMentalNoteBundle::_footer.html.twig' %}

        <script type="text/javascript">
            var scriptsToLoad = [];
            <!-- Le javascript -->
            <!-- Placed at the end of the document so the pages load faster -->
            {% javascripts
            'bundles/olrymentalnote/components/jquery/jquery.min.js'
            'bundles/olrymentalnote/components/bootstrap3/js/bootstrap.min.js'
            'bundles/olrymentalnote/components/select2/select2.js'
            'bundles/olrymentalnote/components/jquery-imageloader/jquery.imageloader.js'
            'bundles/olrymentalnote/js/jQuery.modalAjaxForm.js'
            'bundles/olrymentalnote/js/main.js'
            %}
            scriptsToLoad.push("{{ asset_url }}");
            {% endjavascripts %}

            function loadJsDeferred() {
                scriptsToLoad.forEach(function(jsFile) {
                    var element = document.createElement("script");
                    element.src = jsFile;
                    document.body.appendChild(element);
                });
            }

            if (window.addEventListener) {
                window.addEventListener("load", loadJsDeferred, false);
            } else if (window.attachEvent) {
                window.attachEvent("onload", loadJsDeferred);
            } else {
                window.onload = loadJsDeferred;
            }
        </script>

    </body>
</html>
