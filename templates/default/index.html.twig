{% extends "layout.html.twig" %}

{% block filter %}
    {{ render(controller('App\\Controller\\DefaultController::sidebarAction', { "filter": app.request.get('filter') })) }}
{% endblock %}

{% block container_class %}container-fluid{% endblock %}
{% block content %}
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="row card-deck entry-list">
                {% for entry in pager %}
                    {% include "entry/line.html.twig" with {show_actions: true} %}
                {% endfor %}
                <div class="justify-content-center">
                    {{ pager.haveToPaginate() ? pagerfanta(pager, 'twitter_bootstrap4', { pageParameter: "[filter][page]" }) : '' }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
